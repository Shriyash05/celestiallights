{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "functions": {
    "api/upload.ts": {
      "maxDuration": 60
    }
  },
  "rewrites": [
    {
      "source": "/api/portfolio-projects/([^/]+)",
      "destination": "/api/portfolio-projects/id?id=$1"
    },
    {
      "source": "/api/products/([^/]+)",
      "destination": "/api/products/id?id=$1"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
