{
  "version": 2,
  "functions": {
    "api/**/*.ts": {
      "runtime": "@vercel/node"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/client/index.html"
    }
  ],
  "buildCommand": "npm run build",
  "outputDirectory": "client/dist",
  "installCommand": "npm install"
}
